<% layout("/layouts/boilerplate") %>

    
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on WonderLust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required />
                <div class="valid-feedback">Username looks Good!</div>
                <div class="invalid-feedback">Username not looks Good!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required />
                <div class="valid-feedback">password looks Good!</div>
                <div class="invalid-feedback">password not looks Good!</div>
            </div>

            <button class="btn btn-outline-success">Login</button>
        </form>
    </div>
    </div>